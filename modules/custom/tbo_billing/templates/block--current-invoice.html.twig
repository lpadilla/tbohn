                         data-segment-event="TBO - Opciones de factura - Tx"
                         data-segment-properties='{"category":"FacturaciÃ³n","label":"{{ 'Ver Detalles'|t }} - {[{ environment }]}","site":"NEW"}'
                         class="segment-click">{{ 'Ver Detalles'|t }}</a>
