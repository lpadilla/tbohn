                </a>
               
                <a class='dropdown-button mobile'
                   ng-attr-data-activates='{[{ $index }]}'
                   ng-click="initDropdown()"
                   ng-mouseleave="killDropdown()"><i
                      class="icon"></i>
                </a>
                <ul ng-attr-id='{[{ $index }]}' class='dropdown-content'>
              
                  {% if more_options.details == 1 %}
                  <li ng-if="isDetails == false">
